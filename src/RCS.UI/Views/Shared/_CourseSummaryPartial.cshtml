@{
}
@using RCS.Data.Entities
@using RCS.UI.Utilities
@model Course
<form id="@Model.Id" asp-page="/Cart" method="post">
    <input type="hidden" asp-for="@Model.Id" />
    <input type="hidden" name="returnUrl"
           value="@ViewContext.HttpContext.Request.PathAndQuery()" />
    <div class="card col-3 m-3">
        <img class="responsive" src=/CourseThumbnail/@Model.ThumbnailImageName alt="Card image cap">
        <h5 class="card-title">@Model.Title</h5>
        <div class="card-body">
            <p class="card-text">@Model.Description</p>
        </div>
        <h3 class="card-title">$@Model.Price</h3>
        <button type="submit"
                class="btn btn-success btn-sm pull-right" style="float:right">
            Add To Cart
        </button>

    </div>
</form>